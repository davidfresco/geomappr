{
    "manifest_version": 2,
    "name": "Geomappr",
    "version": "1.0",
    "description": "Saves your current geoguessr location to a map file",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "host_permissions": [
        "*://*.geoguessr.com/*"
    ],

    "browser_action": {
        "default_icon": "globe.png",
        "default_popup": "homepage.html"
    },

    "background": {
        "scripts": ["background_script.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.geoguessr.com/*"],
            "js": ["content_script.js"]
        }
    ]
}
